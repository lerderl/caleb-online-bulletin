<div class="container">
  <% if notice.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(notice.errors.count, "error") %> prohibited this notice from being saved:</h2>
      <ul>
        <% notice.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: notice, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |form| %>
        <div class="form-group row">
          <%= form.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.text_field :title, class: "form-control shadow rounded", placeholder: "News Title" %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :body, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= form.text_area :body, rows: 10, class: "form-control shadow rounded", placeholder: "News Body" %>
          </div>
        </div>

        <div class="mb-3">
          <%= form.label :files, class: "form-label" %>
          <%= form.file_field :files, multiple: true, class: "form-control", placeholder: "Attachments" %>
        </div>

        <div class="form-group row justify-content-center">
            <%= form.submit class: "btn btn-outline-light btn-lg" %>
          </div>
      <% end %>
    </div>
    <%= link_to '[ Back ]', notices_path, class: "text-info" %>
  </div>
</div>
